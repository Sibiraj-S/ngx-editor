{
  "private": true,
  "scripts": {
    "build:demo": "ng build demo --prod",
    "build:lib": "ng build ngx-editor --prod ",
    "build:docs": "compodoc",
    "build": "npm run build:lib && npm run build:demo",
    "e2e": "ng e2e",
    "lint": "ng lint",
    "lint:scripts": "eslint ./scripts",
    "ng": "ng",
    "prebuild": "npm run lint",
    "prerelease": "npm run build:lib",
    "publish:docs": "npm run build:docs && node ./scripts/publishdocs.js",
    "postbuild:lib": "node ./scripts/postbuild.js",
    "release": "sh ./scripts/release.sh",
    "serve:demo": "ng serve demo --aot --open --port 5002 --host 0.0.0.0",
    "serve:docs": "compodoc --serve --watch --open --output=\"docs/\"",
    "test:demo": "ng test demo --browsers ChromeHeadless --watch false",
    "test:lib": "ng test ngx-editor --browsers ChromeHeadless --watch false",
    "test": "npm run test:lib && npm run test:demo",
    "watch:lib": "ng build ngx-editor --watch"
  },
  "keywords": [
    "angular-editor",
    "angular-wysiwyg-editor",
    "wysiwyg-editor",
    "ngx-editor",
    "prosemirror"
  ],
  "dependencies": {
